<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SplitImageView">

        <!-- Sets a foreground drawable as the content of this SplitImageView. -->
        <attr name="foregroundSrc" format="reference|color" />

        <!-- Sets a background drawable as the content of this SplitImageView. -->
        <attr name="backgroundSrc" format="reference|color" />

        <!-- Controls how the image should be resized or moved to match the size
             of this SplitImageView. -->
        <attr name="scaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>

        <!-- Set a tinting color for the images. -->
        <attr name="tint" format="color" />

        <!-- If true, the images will be cropped to fit within its padding. -->
        <attr name="cropToPadding" format="boolean" />

        <!-- The alpha value (0-255) set on the drawables. Equivalent
             to calling SplitImageView.setAlpha(int), not the same as View.setAlpha(float). -->
        <attr name="drawableAlpha" format="integer" />

        <!--The amount the fore ground image will be masked-->
        <attr name="splitPercent" format="integer" />

        <!--This will enable drag events to unveil the background image-->
        <attr name="unveilOnTouch" format="boolean" />

        <!--Enabling this will snap the imaget split to the bounds when it reaches close to it-->
        <attr name="snapToBounds" format="boolean" />
    </declare-styleable>
</resources>